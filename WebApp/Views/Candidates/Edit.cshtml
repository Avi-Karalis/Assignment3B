                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control  bg-dark text-warning", placeholder = "mail@adress.com" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
