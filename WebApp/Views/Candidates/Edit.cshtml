        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Save" class="btn btn-outline-success">Save Changes</button> |
                <button type="submit" class="btn btn-info">@Html.ActionLink("Back to List", "Index")</button>
            </div>
        </div>
        
    }

</body>
</html>
