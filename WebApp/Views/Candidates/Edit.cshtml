                       new SelectListItem { Value = "", Text = "--Select ID Type--" },
                       new SelectListItem { Value = "National ID Card", Text = "National ID Card" },
                       new SelectListItem { Value = "Passport", Text = "Passport" }
                   }, "value", "text"), new { @class = "form-control  bg-dark text-warning" })
                    @Html.ValidationMessageFor(model => model.PhotoIdType, "", new { @class = "text-danger" })
                </div>
                @Html.ValidationMessageFor(model => model.PhotoIdType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PhotoIdNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
